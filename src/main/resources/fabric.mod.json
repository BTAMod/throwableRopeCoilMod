  "authors": [
    "Bill Schitt"
  ],
  "contact": {
    "homepage": "",
    "sources": ""
  },

	"icon": "icon.png",
  "license": "CC0-1.0",

  "environment": "*",
  "entrypoints": {
    "main": [
			"billschitt.throwableRopeCoilMod.throwableRopeCoilModInitialiser"
    ],
		"beforeGameStart": [
			"billschitt.throwableRopeCoilMod.throwableRopeCoilModInitialiser"
		],
		"afterGameStart": [
			"billschitt.throwableRopeCoilMod.throwableRopeCoilModInitialiser"
		],
		"recipesReady": [
			"billschitt.throwableRopeCoilMod.throwableRopeCoilModInitialiser"
		]
	},
  "mixins": [
      "throwableRopeCoilMod.mixins.json"
